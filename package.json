{
  "name": "kards-tools",
  "version": "0.1.0",
  "description": "Tools for interacting with the kards backend as well as utils used across Kards Stats",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/backend",
    "build/connectors",
    "build/includes",
    "build/kards",
    "build/index.*"
  ],
  "scripts": {
    "test": "npm run build && nyc --reporter=clover --reporter=html --reporter=text --all jest",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "lint": "ts-standard --fix",
    "publish:test": "rm -rf package *.tgz && npm run publish:pack && tar -xvzf *.tgz",
    "publish:pack": "npm run build && npm pack",
    "publish": "npm run build && npm publish",
    "dev:generate": "env-cmd -e dev ts-node generate-types.ts && ts-standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kards-Stats/kards-tools.git"
  },
  "author": "KlutzyBubbles",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kards-Stats/kards-tools/issues"
  },
  "homepage": "https://github.com/Kards-Stats/kards-tools#readme",
  "ts-standard": {
    "ignore": [
      "tests/**/*.test.ts"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@types/follow-redirects": "^1.13.1",
    "@types/keyv": "^3.1.2",
    "@types/q": "^1.5.5",
    "@types/triple-beam": "^1.3.2",
    "@types/underscore": "^1.11.3",
    "follow-redirects": "^1.14.1",
    "graphql": "^15.5.1",
    "mongoose": "^5.13.3",
    "q": "^1.5.1",
    "steam-user": "^4.19.12",
    "toad-scheduler": "^1.5.0",
    "triple-beam": "^1.3.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.3.5",
    "underscore": "^1.13.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@graphql-codegen/core": "^1.17.10",
    "@graphql-codegen/typescript": "^1.23.0",
    "@types/jest": "^26.0.24",
    "@types/rewire": "^2.5.28",
    "env-cmd": "^10.1.0",
    "jest": "^27.0.6",
    "mongodb-memory-server": "^7.3.0",
    "nyc": "^15.1.0",
    "rewire": "^5.0.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0"
  }
}
